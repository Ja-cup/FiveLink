/* white background, red buttons */
QWidget      { background:#ffffff;  color:#000000; }
QLabel       { font-size:24px; }

QPushButton  {
    font-size:24px;  padding:10px 20px; border:none;
    border-radius:12px; background:#EE3224; color:#fff;
}
QPushButton:hover   { background:#c6281d; }
QPushButton:pressed { background:#a31f16; }

/* highlight the element in keyboard/joy focus */
QPushButton:focus, QLabel:focus {
    outline:4px solid #FFD700;   /* gold */
}